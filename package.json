{
  "name": "slash",
  "description": "A fast, light-weight anonymous chat application.",
  "author": "ezsnova",
  "version": "1.0",
  "private": true,
  "scripts": {
    "build:server": "tsc ./server/server.ts --outDir ./server/build --rootDir ./server --esModuleInterop --target esnext --moduleResolution node",
    "dev:server": "node ./server/build/server.js",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@magidoc/plugin-svelte-marked": "^4.1.2",
    "@picocss/pico": "^1.5.10",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "prettier-plugin-svelte": "^2.10.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "svelte-fa": "^3.0.4",
    "svelte-loading-spinners": "^0.3.4",
    "svelte-mp3": "^1.3.0"
  }
}
